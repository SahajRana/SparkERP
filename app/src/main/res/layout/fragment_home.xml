<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.students.spark.androsoft.spark.HomeFragment"
    android:background="#e7e7e7"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/notice_progressBar"
            android:layout_width="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateOnly="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <include layout="@layout/thought_layout"
                android:id="@+id/thought_view"/>
            <include layout="@layout/attendance_layout"
                android:id="@+id/attendance_view"/>

        </LinearLayout>
    </FrameLayout>
</ScrollView>
