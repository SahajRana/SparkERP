<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:clickable="true"

    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="230dp">
            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/image"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/login_pic" />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="bottom"
                android:background="#daff5344"/>
            <LinearLayout
                android:background="#28ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingTop="48dp"
                android:paddingBottom="28dp"
                android:gravity="center_vertical|center_horizontal">

                <in.workarounds.typography.TextView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:font_name="montserrat"
                    app:font_variant="regular"
                    android:textSize="40sp"
                    android:textColor="#ffffff"
                    android:textAllCaps="true"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="90dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:background="#aeffffff"/>
                    <in.workarounds.typography.TextView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        app:font_name="montserrat"
                        app:font_variant="regular"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="17sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:text="TO"
                        />
                    <View
                        android:layout_width="90dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:background="#aeffffff"/>
                </LinearLayout>

                <in.workarounds.typography.TextView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:font_name="montserrat"
                    app:font_variant="regular"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:textAllCaps="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Account"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

            </LinearLayout>

        </FrameLayout>
        <ImageView
            android:layout_marginTop="190dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/user_login"
            android:layout_width="70dp"
            android:layout_height="70dp" />
    </RelativeLayout>

    <LinearLayout
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:layout_marginTop="200dp"
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical|center_horizontal">
            <com.greenfrvr.rubberloader.RubberLoaderView
                android:layout_gravity="center"
                android:id="@+id/loader1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:loaderPrimeColor="@color/colorPrimary"
                app:loaderExtraColor="@color/colorAccent"
                app:loaderSize="normal"
                android:visibility="gone"
                app:loaderRippleColor="@color/colorPrimary"
                app:loaderRippleMode="reverse"/>
            <LinearLayout
                android:id="@+id/login_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">



                <LinearLayout
                    android:id="@+id/email_login_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <in.workarounds.typography.EditText
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        app:font_name="montserrat"
                        app:font_variant="regular"
                        android:background="@drawable/edit_text_back_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="14"
                        android:textAlignment="center"
                        android:id="@+id/login_username"
                        android:hint="Email"
                        android:layout_gravity="center"
                        style="@style/Base.V7.Widget.AppCompat.EditText" />
                    <in.workarounds.typography.EditText
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        app:font_name="montserrat"
                        app:font_variant="regular"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="14"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/edit_text_back_box"
                        android:hint="Password"
                        android:id="@+id/login_password"
                        android:layout_gravity="center" />
                    <in.workarounds.typography.Button
                        app:font_name="montserrat"
                        app:font_variant="regular"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/login_button"
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="35dp"
                        android:background="#ef5350"
                        android:text="LOGIN"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/finaledition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <in.workarounds.typography.TextView
            android:visibility="gone"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:font_name="alegreya"
            android:padding="10dp"
            app:font_variant="sans.thin"
            android:id="@+id/finaleditionText"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#7c7c7c"
            android:layout_gravity="center"
            android:textSize="80sp"
            android:textAlignment="center"
            android:text="Final \nEdition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/finaleditionImage"
            android:layout_gravity="center"

            android:layout_width="200dp"
            android:layout_height="200dp"/>
        <in.workarounds.typography.TextView
            android:visibility="gone"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:font_name="alegreya"
            app:font_variant="sans.thin"
            android:padding="10dp"
            android:id="@+id/finaleditionVersion"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#7c7c7c"
            android:layout_gravity="center"
            android:textSize="100sp"
            android:textAlignment="center"
            android:text="1.O"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <in.workarounds.typography.TextView
            android:visibility="gone"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:font_name="alegreya"
            app:font_variant="sans.thin"
            android:padding="10dp"
            android:id="@+id/forText"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#7c7c7c"
            android:layout_gravity="center"
            android:textSize="60sp"
            android:textAlignment="center"
            android:text="Connecting \nEveryone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <in.workarounds.typography.TextView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:font_name="hirukopro"
            app:font_variant="light"
            android:textSize="40sp"
            android:textColor="#5e606e"
            android:layout_gravity="center_horizontal|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"/>


    </FrameLayout>


</android.support.design.widget.CoordinatorLayout>
