<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/frag_navigation_drawer"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical"
              android:clickable="true"
              tools:context=".drawer.NavigationDrawerFragment">


    <RelativeLayout
        android:id="@+id/containerDrawerImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#ffffff">
        <ImageView
            android:id="@+id/ProfileDP"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="26dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="50dp"/>
        <ImageView
            android:layout_marginTop="@dimen/image_padding_top"
            android:layout_width="280dp"
            android:layout_height="176dp"
            android:scaleType="centerCrop"
            android:id="@+id/imageView"
            android:src="@drawable/red"/>

        <TextView
            android:id="@+id/UserProileName"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#C5CAE9"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:fontFamily="sans-serif-thin"
            android:hint="UserName"
            android:text="Username"
            android:layout_alignBottom="@+id/imageView"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/drawerRecyclerList"
        android:layout_width="match_parent"
          android:layout_height="wrap_content"
        />
</LinearLayout>