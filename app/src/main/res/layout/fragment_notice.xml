<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.students.spark.androsoft.spark.NoticeFragment"
    android:background="#535353"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <ProgressBar
        android:visibility="gone"
        android:id="@+id/notice_progressBar"
        android:layout_width="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateOnly="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/thought_layout"
            android:id="@+id/thought_view"/>
        <include layout="@layout/attendance_layout"
            android:id="@+id/attendance_view"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/notice_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>



</FrameLayout>
